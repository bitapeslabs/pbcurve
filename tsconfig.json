{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "rootDir": "./src",
    "outDir": "./dist",

    // ⬇️ This is the critical part for .d.ts
    "declaration": true,
    "declarationMap": true,

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["ES2020"]
  },
  "include": ["src"],
  "exclude": ["src/web.ts", "src/next.ts"]
}
